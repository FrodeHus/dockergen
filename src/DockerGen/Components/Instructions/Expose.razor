@using DockerGen.Container

<InstructionElement Instruction="@Instruction" Title="@Instruction.DisplayName">
    <div class="mat-layout-grid">
        <div class="mat-layout-grid-inner">
            <div class="mat-layout-grid-cell">
                <MatNumericUpDownField Label="Port" @bind-Value="@Instruction.Port" PlaceHolder="80" Minimum="1"></MatNumericUpDownField>
            </div>
            <div class="mat-layout-grid-cell">
                <MatRadioGroup @bind-Value="@Instruction.Protocol" TValue="string">
                    <MatRadioButton Value="@("tcp")">TCP</MatRadioButton>
                    <MatRadioButton Value="@("udp")">UDP</MatRadioButton>
                </MatRadioGroup>
            </div>
        </div>
    </div>
</InstructionElement>

@code {
    [Parameter]
    public ExposeInstruction Instruction { get; set; }
}