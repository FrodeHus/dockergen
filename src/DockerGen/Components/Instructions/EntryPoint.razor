@using DockerGen.Container

<InstructionElement Instruction="@Instruction" Title="@Instruction.DisplayName">
    <div class="mat-layer-grid">
        <div class="mat-layer-grid-innser">
            <div class="mat-layer-grid-cell mat-layer-grid-cell-span-6">
                <MatTextField Label="Command" FullWidth="true" @bind-Value="@Instruction.Executable"></MatTextField>
            </div>
            <div class="mat-layer-grid-cell mat-layer-grid-cell-span-6">
                <MatTextField Label="Arguments" FullWidth="true" @bind-Value="@Instruction.Arguments"></MatTextField>
            </div>
        </div>
    </div>
</InstructionElement>

@code {
    [Parameter]
    public EntryPointInstruction Instruction { get; set; }
}